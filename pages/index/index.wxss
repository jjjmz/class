.majorCon {
  display: inline-flex;
  padding: 20rpx 0;
  width: 25%;
}

.major .box {
  text-align: center;
  width: 190rpx;
}

.major .pic {
  width: 100rpx;
  height: 100rpx;
}

.major .txt {
  font-size: 26rpx;
  margin-top: 10rpx;
}